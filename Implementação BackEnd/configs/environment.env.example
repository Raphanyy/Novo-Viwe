# ========================================
# CONFIGURAÇÃO DE ENVIRONMENT VARIABLES
# ========================================
# Copie este arquivo para .env e preencha com suas credenciais

# ========================================
# DATABASE - NEON POSTGRESQL
# ========================================
# Obtido após conectar: [Connect to Neon](#open-mcp-popover)
DATABASE_URL=postgresql://username:password@hostname:5432/database
DB_HOST=your-neon-host.neon.tech
DB_PORT=5432
DB_NAME=viwe_database
DB_USER=your-username
DB_PASSWORD=your-password

# ========================================
# JWT AUTHENTICATION
# ========================================
# Gere com: node scripts/generate-jwt-secret.js
JWT_SECRET=your-256-bit-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# MAPBOX INTEGRATION
# ========================================
# Token secreto (backend) - diferente do público
MAPBOX_ACCESS_TOKEN=sk.your-secret-mapbox-token
# Token público (frontend) - já configurado
VITE_MAPBOX_ACCESS_TOKEN=pk.eyJ1IjoicmFwaGFueSIsImEiOiJjbWVuOTBpcDMwdnBxMmlweGp0cmc4a2s0In0.KwsjXFJmloQvThFvFGjOdA

# ========================================
# EMAIL - SENDGRID
# ========================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@viwe.com
FROM_NAME=Viwe

# ========================================
# OAUTH - GOOGLE
# ========================================
# Obtido em: https://console.developers.google.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ========================================
# OAUTH - APPLE
# ========================================
# Obtido em: https://developer.apple.com
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./certs/apple-private-key.p8

# ========================================
# STRIPE BILLING
# ========================================
# Obtido em: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ========================================
# APPLICATION CONFIG
# ========================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:8080

# ========================================
# SECURITY
# ========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ========================================
# REDIS (OPCIONAL - PARA CACHE)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=3600

# ========================================
# MONITORING (OPCIONAL)
# ========================================
SENTRY_DSN=https://your-sentry-dsn
WEBHOOK_MONITORING_URL=https://your-monitoring-webhook

# ========================================
# BACKUP E STORAGE (OPCIONAL)
# ========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=viwe-backups
AWS_REGION=us-east-1

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_OAUTH=true
ENABLE_BILLING=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
